<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pimg5"
    tools:context="com.example.administrator.activitycollector.activity.RegisterActivity">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/lip_register"
            android:textSize="25sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:padding="15dip" >

        <TextView
            android:id="@+id/tv_user_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="帐号"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_user_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_register"
            android:background="@drawable/login_edit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="用户名"
            android:inputType="text"
            android:paddingBottom="7dp"
            android:paddingLeft="9dp"
            android:paddingRight="8dp"
            android:paddingTop="7dp"
            android:singleLine="true"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pass_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_user_register"
            android:layout_marginTop="8dp"
            android:text="密码"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_pass_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pass_register"
            android:background="@drawable/login_edit"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingBottom="7dp"
            android:paddingLeft="9dp"
            android:paddingRight="8dp"
            android:paddingTop="7dp"
            android:password="true"
            android:singleLine="true"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_pass_register2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_pass_register"
            android:layout_marginTop="8dp"
            android:text="确认密码"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_pass_register2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pass_register2"
            android:background="@drawable/login_edit"
            android:inputType="textPassword"
            android:paddingBottom="7dp"
            android:paddingLeft="9dp"
            android:paddingRight="8dp"
            android:paddingTop="7dp"
            android:password="true"
            android:hint="密码"
            android:singleLine="true"
            android:textSize="15sp" />


        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignRight="@id/et_pass_register2"
            android:layout_below="@id/et_pass_register2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="#4cc05f"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="注册"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>
